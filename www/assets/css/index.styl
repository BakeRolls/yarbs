color-red = #e63124
color-green = #40c41e

html, body, #main
	height 100%

body
	cursor default
	background #444

#main
	overflow-y scroll
	padding-bottom 44px

.list
	&, .item
		color #fff
		border-color rgba(0, 0, 0, .15)
		background transparent

		.show
			overflow hidden
			display block
			height 18px
			transition all .15s

	.item
		border-left 5px solid transparent

		&.live
			border-left-color color-red

		&.premiere
			border-left-color color-green

	.item-note
		text-align right


.tabs
	.tab-item
		&:hover
			color #fff
			background rgba(0, 0, 0, .1)

.tabs-background-assertive
	.tabs
		border-color rgba(0, 0, 0, .1)
		background-color color-red
