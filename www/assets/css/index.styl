html, body, #main
	height 100%

body
	background #444

#main
	overflow-y scroll
	padding-bottom 44px

.list
	&, .item
		color #fff
		border-color rgba(0, 0, 0, .15)
		background transparent

		.show
			overflow hidden
			display block
			height 18px
			transition all .15s

	.item-note
		text-align right

.tabs
	.tab-item
		&:hover
			color #fff
			background rgba(0, 0, 0, .1)

.tabs-background-assertive
	.tabs
		border-color rgba(0, 0, 0, .1)
		background-color #E63124
